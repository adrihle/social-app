<div class="card mt-3">
    <div class="card-header bg-dark">
        <h1 class="card-title text-white">
            <i class="far fa-image p-2"></i>Upload
        </h1>
    </div>
    <div class="card-body">
        <form action="/images" method='POST' class="form" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        {{!-- se agrega name='image' para que el modulo multer del server redireccione a una carpeta especifica --}}
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
                            aria-describedby="inputGroupFileAddon" required />
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" placeholder="Title for the image" class="form-control" required>
            </div>
            <div class="form-group">
                <textarea name="description" cols="30" rows="2" class="form-control"
                    placeholder="Description for the image" required></textarea>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Recent Upload</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="" class='w-100 h-100 img-thumbnail'>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>